@page "/tabla1"
@using ClassLibrary1;

<h1>Contactos</h1>

<div class="row">
    <div class="col-12 col-sm-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Telefono</th>
                </tr>
            </thead>
            <tbody>
                @if (lista == null)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    @foreach (var item in lista)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.nom</td>
                            <td>@item.app</td>
                            <td>@item.tel</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@code {
    private List<Contacto>? lista;
    int i = 0;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);

        Class1 class1 = new Class1();
        lista = class1.mostrar();
    }
}